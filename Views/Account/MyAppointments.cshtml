@model List<Appointment>

@{
    ViewData["Title"] = "Randevularım";
    var awaitingAppointments = Model.Where(a => a.Status == 0).ToList();
    var acceptedAppointments = Model.Where(a => a.Status == 1).ToList();
    var completedAppointments = Model.Where(a => a.Status == 3).ToList();
    var rejectedAppointments = Model.Where(a => a.Status == 2).ToList();
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-calendar-check"></i> Randevularım
                    </h2>
                    <small class="text-muted">Tüm randevu taleplerini ve sonuçlarını görüntüleyin</small>
                </div>
                <div>
                    <button class="btn btn-outline-primary btn-sm" id="viewToggleBtn" onclick="toggleView()">
                        <i class="fas fa-calendar-alt"></i> Haftalık Takvim
                    </button>
                </div>
            </div>
        </div>
    </div>

    <style>
        .view-hidden { display: none !important; }
    </style>

    <script>
        function toggleView() {
            var listView = document.getElementById('listViewContainer');
            var calendarView = document.getElementById('calendarViewContainer');
            var btn = document.getElementById('viewToggleBtn');
            
            if (listView.classList.contains('view-hidden')) {
                listView.classList.remove('view-hidden');
                calendarView.classList.add('view-hidden');
                btn.innerHTML = '<i class="fas fa-calendar-alt"></i> Haftalık Takvim';
            } else {
                listView.classList.add('view-hidden');
                calendarView.classList.remove('view-hidden');
                btn.innerHTML = '<i class="fas fa-list"></i> Liste Görünümü';
            }
        }
    </script>

    <div id="listViewContainer">    <!-- Requested/Awaiting Appointments -->
    <div class="card mb-4" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <div class="card-header" style="background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%); border-radius: 15px 15px 0 0; border: none;">
            <h5 class="mb-0 text-white">
                <i class="fas fa-clock"></i> Beklemede (@awaitingAppointments.Count)
            </h5>
        </div>
        <div class="card-body p-3">
            @if (awaitingAppointments.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-3">Beklemede randevu yok</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var appointment in awaitingAppointments)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card h-100" style="border-radius: 12px; border: 2px solid #ffc107; transition: all 0.3s ease;">
                                <div class="card-body">
                                    <h6 class="card-title" style="color: #fff;">
                                        <i class="fas fa-user-tie"></i> @appointment.Trainer?.Name
                                    </h6>
                                    <small style="color: #aaa;"><i class="fas fa-building"></i> @appointment.Trainer?.Gym?.Name</small>
                                    <p class="mb-2 mt-3" style="color: #ddd;">
                                        <strong>Tarih:</strong> @appointment.AppointmentDate.ToString("dd/MM/yyyy")
                                    </p>
                                    <p class="mb-2" style="color: #ddd;">
                                        <strong>Saat:</strong> @appointment.ScheduleSlot?.Hour:00 - @((appointment.ScheduleSlot?.Hour ?? 0) + 1):00
                                    </p>
                                    <p class="mb-3" style="color: #ddd;">
                                        <strong>Hizmetler:</strong>
                                        @if (appointment.ScheduleSlot?.ScheduleSlotServices?.Any() == true)
                                        {
                                            <br />
                                            @foreach (var service in appointment.ScheduleSlot.ScheduleSlotServices)
                                            {
                                                <span class="badge bg-info me-1">@service.Service?.Name</span>
                                            }
                                        }
                                    </p>
                                    <div class="alert alert-warning" style="margin: 0; padding: 8px;">
                                        <small><i class="fas fa-info-circle"></i> Eğitmen onayını bekleniyor...</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Accepted Appointments -->
    <div class="card mb-4" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <div class="card-header" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border-radius: 15px 15px 0 0; border: none;">
            <h5 class="mb-0 text-white">
                <i class="fas fa-check-circle"></i> Onaylı Randevular (@acceptedAppointments.Count)
            </h5>
        </div>
        <div class="card-body p-3">
            @if (acceptedAppointments.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-3">Onaylı randevu yok</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var appointment in acceptedAppointments)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card h-100" style="border-radius: 12px; border: 2px solid #28a745; transition: all 0.3s ease;">
                                <div class="card-body">
                                    <h6 class="card-title" style="color: #fff;">
                                        <i class="fas fa-user-tie"></i> @appointment.Trainer?.Name
                                    </h6>
                                    <small style="color: #aaa;"><i class="fas fa-building"></i> @appointment.Trainer?.Gym?.Name</small>
                                    <p class="mb-2 mt-3" style="color: #ddd;">
                                        <strong>Tarih:</strong> @appointment.AppointmentDate.ToString("dd/MM/yyyy")
                                    </p>
                                    <p class="mb-2" style="color: #ddd;">
                                        <strong>Saat:</strong> @appointment.ScheduleSlot?.Hour:00 - @((appointment.ScheduleSlot?.Hour ?? 0) + 1):00
                                    </p>
                                    <p class="mb-3" style="color: #ddd;">
                                        <strong>Hizmetler:</strong>
                                        @if (appointment.ScheduleSlot?.ScheduleSlotServices?.Any() == true)
                                        {
                                            <br />
                                            @foreach (var service in appointment.ScheduleSlot.ScheduleSlotServices)
                                            {
                                                <span class="badge bg-info me-1">@service.Service?.Name</span>
                                            }
                                        }
                                    </p>
                                    <div class="alert alert-success" style="margin: 0; padding: 8px;">
                                        <small><i class="fas fa-check"></i> Randevu onaylandı. Tarihini not edin!</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Completed Appointments -->
    <div class="card mb-4" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <div class="card-header" style="background: linear-gradient(135deg, #6f42c1 0%, #8e44ad 100%); border-radius: 15px 15px 0 0; border: none;">
            <h5 class="mb-0 text-white">
                <i class="fas fa-check-double"></i> Tamamlanan (@completedAppointments.Count)
            </h5>
        </div>
        <div class="card-body p-3">
            @if (completedAppointments.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-3">Tamamlanan randevu yok</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var appointment in completedAppointments)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card h-100" style="border-radius: 12px; border: 2px solid #6f42c1; transition: all 0.3s ease;">
                                <div class="card-body">
                                    <h6 class="card-title" style="color: #fff;">
                                        <i class="fas fa-user-tie"></i> @appointment.Trainer?.Name
                                    </h6>
                                    <small style="color: #aaa;"><i class="fas fa-building"></i> @appointment.Trainer?.Gym?.Name</small>
                                    <p class="mb-2 mt-3" style="color: #ddd;">
                                        <strong>Tarih:</strong> @appointment.AppointmentDate.ToString("dd/MM/yyyy")
                                    </p>
                                    <p class="mb-2" style="color: #ddd;">
                                        <strong>Saat:</strong> @appointment.ScheduleSlot?.Hour:00 - @((appointment.ScheduleSlot?.Hour ?? 0) + 1):00
                                    </p>
                                    <p class="mb-3" style="color: #ddd;">
                                        <strong>Hizmetler:</strong>
                                        @if (appointment.ScheduleSlot?.ScheduleSlotServices?.Any() == true)
                                        {
                                            <br />
                                            @foreach (var service in appointment.ScheduleSlot.ScheduleSlotServices)
                                            {
                                                <span class="badge bg-info me-1">@service.Service?.Name</span>
                                            }
                                        }
                                    </p>
                                    <div class="alert alert-info" style="margin: 0; padding: 8px;">
                                        <small><i class="fas fa-star"></i> Ders tamamlandı. Puanınızı verdiniz mi?</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Rejected/Cancelled Appointments -->
    <div class="card" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); border-radius: 15px 15px 0 0; border: none;">
            <h5 class="mb-0 text-white">
                <i class="fas fa-times-circle"></i> Reddedilen/İptal (@rejectedAppointments.Count)
            </h5>
        </div>
        <div class="card-body p-3">
            @if (rejectedAppointments.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-3">Reddedilen randevu yok</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var appointment in rejectedAppointments)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card h-100" style="border-radius: 12px; border: 2px solid #dc3545; transition: all 0.3s ease; opacity: 0.8;">
                                <div class="card-body">
                                    <h6 class="card-title" style="color: #fff;">
                                        <i class="fas fa-user-tie"></i> @appointment.Trainer?.Name
                                    </h6>
                                    <small style="color: #aaa;"><i class="fas fa-building"></i> @appointment.Trainer?.Gym?.Name</small>
                                    <p class="mb-2 mt-3" style="color: #ddd;">
                                        <strong>Tarih:</strong> @appointment.AppointmentDate.ToString("dd/MM/yyyy")
                                    </p>
                                    <p class="mb-2" style="color: #ddd;">
                                        <strong>Saat:</strong> @appointment.ScheduleSlot?.Hour:00 - @((appointment.ScheduleSlot?.Hour ?? 0) + 1):00
                                    </p>
                                    <p class="mb-3" style="color: #ddd;">
                                        <strong>Hizmetler:</strong>
                                        @if (appointment.ScheduleSlot?.ScheduleSlotServices?.Any() == true)
                                        {
                                            <br />
                                            @foreach (var service in appointment.ScheduleSlot.ScheduleSlotServices)
                                            {
                                                <span class="badge bg-info me-1">@service.Service?.Name</span>
                                            }
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
</style>
    </div>

    <!-- Calendar View -->
    <div id="calendarViewContainer" class="view-hidden">
        @await Html.PartialAsync("_WeeklySchedule", Model)
    </div>