@using PowerUp.Models
@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = await UserManager.GetUserAsync(User);
    var trainer = ViewBag.Trainer as Trainer;
    var isTrainer = ViewBag.IsTrainer as bool? ?? false;
}



<div class="profile-header">
    <div class="container d-flex align-items-center">
        <div class="profile-avatar me-4">
            <i class="fas fa-user"></i>
        </div>
        <div>
            <h1 class="mb-1 text-white">@user?.UserName @(isTrainer? Html.Raw("<i class='fas fa-check-circle             text-primary ms-2' title='Eğitmen Hesabı'></i>") : "")</h1>
            <p class="text-muted mb-0">
                <i class="fas fa-envelope me-2"></i>@user?.Email
                <span class="mx-2">|</span>
                <i class="fas fa-clock me-2"></i>Üyelik: @user?.SecurityStamp?.Substring(0, 10)
            </p>
        </div>
        <div class="ms-auto">
            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger btn-sm">
                <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
            </a>
        </div>
    </div>
</div>

<div class="container mb-5">

    @if (isTrainer && trainer != null)
    {
        <h4 class="text-white mb-4 border-start border-3 border-danger ps-3">Eğitmen Kontrol Paneli</h4>
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-4">
                <div class="dashboard-card">
                    <div class="card-header-custom">
                        <h5>Program Yönetimi</h5>
                        <i class="fas fa-calendar-alt card-icon"></i>
                    </div>
                    <div class="card-body-custom">
                        <p class="text-muted">Müsaitlik durumunuzu ve çalışma saatlerinizi buradan düzenleyin.</p>
                        <a href="@Url.Action("MySchedule", "Schedule")" class="action-btn">
                            Programı Düzenle
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="dashboard-card">
                    <div class="card-header-custom">
                        <h5>Uzmanlık Alanlarım</h5>
                        <i class="fas fa-dumbbell card-icon"></i>
                    </div>
                    <div class="card-body-custom">
                        <p class="text-muted">Verdiğiniz dersleri ve hizmetleri yönetin.</p>
                        <a href="@Url.Action("MyServices", "Trainer")" class="action-btn">
                            Hizmetleri Yönet
                        </a>
                        <button class="btn btn-link text-white mt-2" data-bs-toggle="modal"
                            data-bs-target="#addServiceModal">
                            <small>+ Hızlı Ekle</small>
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="dashboard-card">
                    <div class="card-header-custom">
                        <h5>Gelen Randevular</h5>
                        <i class="fas fa-clipboard-list card-icon"></i>
                    </div>
                    <div class="card-body-custom">
                        <p class="text-muted">Öğrencilerinizin randevu taleplerini inceleyin.</p>
                        <a href="@Url.Action("Appointments", "Trainer")" class="action-btn">
                            Tümünü Gör
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12">
                <div class="card bg-dark border-secondary">
                    <div class="card-header border-secondary text-white">
                        <i class="fas fa-history me-2 text-danger"></i> Bugün Reddedilen Randevular
                    </div>
                    <div class="card-body p-0">
                        <div id="rejectedAppointmentsContainer" class="list-group list-group-flush list-group-dark">
                            <div class="text-center py-4 text-muted">
                                <div class="spinner-border text-danger spinner-border-sm" role="status"></div> Yükleniyor...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (!isTrainer)
    {
        <h4 class="text-white mb-4 border-start border-3 border-danger ps-3">Üyelik Bilgilerim</h4>
        <div class="row g-4">

            <div class="col-md-6">
                <div class="dashboard-card">
                    <div class="card-header-custom">
                        <h5>Antrenman Randevularım</h5>
                        <i class="fas fa-calendar-check card-icon"></i>
                    </div>
                    <div class="card-body-custom">
                        <p class="text-muted">Eğitmenlerle planladığınız derslerinizi buradan takip edin.</p>
                        <a href="@Url.Action("Appointments", "Trainer")" class="action-btn">
                            Randevularıma Git
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="dashboard-card">
                    <div class="card-header-custom">
                        <h5>Spor Salonu Üyeliği</h5>
                        <i class="fas fa-building card-icon"></i>
                    </div>
                    <div class="p-3">
                        <div class="list-group list-group-dark">
                            <div class="list-group-item">
                                <h6 class="mb-1 text-white">Mevcut olarak abonelik yok.</h6>
                            </div>
                        </div>
                    </div>
                    <div class="text-center pb-4">
                        <a href="@Url.Action("List", "Gym")" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-plus me-1"></i> Yeni Abonelik
                        </a>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

@if ((isTrainer) && trainer != null)
{
    var allServices = ViewBag.AllServices as List<Service> ?? new List<Service>();
    var assignedServiceIds = ViewBag.AssignedServiceIds as List<int> ?? new List<int>();
    var availableServices = allServices.Where(s => !assignedServiceIds.Contains(s.Id)).ToList();

    <div class="modal fade" id="addServiceModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-content-dark">
                <div class="modal-header modal-header-dark">
                    <h5 class="modal-title"><i class="fas fa-plus-circle text-danger me-2"></i>Hizmet Ekle</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @if (availableServices.Any())
                    {
                        <form id="addServiceForm" method="post" action="@Url.Action("AddService", "Trainer")">
                            <input type="hidden" name="id" value="@trainer?.Id" />
                            <div class="mb-3">
                                <label for="serviceSelect" class="form-label text-muted">Hizmet Seçimi</label>
                                <select class="form-select form-control-dark" id="serviceSelect" name="serviceId" required>
                                    <option value="">-- Listeden Seçiniz --</option>
                                    @foreach (var service in availableServices)
                                    {
                                        <option value="@service.Id">@service.Name</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-danger w-100">Kaydet ve Ekle</button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <p>Harika! Mevcut tüm hizmetleri zaten profilinize eklediniz.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Rejected appointments loader styled for Dark Theme
        async function loadRejectedAppointments() {
            try {
                const container = document.getElementById('rejectedAppointmentsContainer');
                // Simüle edilmiş bir hata yönetimi veya boş durum için:
                // Gerçek API çağrısını burada tutuyoruz
                const response = await fetch('/api/appointment/rejected-today');

                if (response.ok) {
                    const rejectedAppointments = await response.json();

                    if (rejectedAppointments.length === 0) {
                        container.innerHTML = `
                            <div class="p-4 text-center text-muted">
                                <i class="fas fa-check-double mb-2"></i><br>
                                Bugün reddedilen randevu bulunmamaktadır.
                            </div>`;
                    } else {
                        container.innerHTML = rejectedAppointments.map(app => `
                            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-4 py-3">
                                <div>
                                    <h6 class="mb-1 text-white"><i class="fas fa-user me-2 text-muted"></i>${app.trainerName}</h6>
                                    <small class="text-muted"><i class="far fa-clock me-1"></i> ${app.scheduleSlotHour}:00 - ${app.scheduleSlotHour + 1}:00</small>
                                </div>
                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">
                                    Reddedildi
                                </span>
                            </div>
                        `).join('');
                    }
                }
            } catch (error) {
                console.error('Error loading rejected appointments:', error);
                document.getElementById('rejectedAppointmentsContainer').innerHTML =
                    '<div class="p-3 text-center text-danger">Veriler yüklenirken bir hata oluştu.</div>';
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            if (document.getElementById('rejectedAppointmentsContainer')) {
                loadRejectedAppointments();
            }
        });
    </script>
}