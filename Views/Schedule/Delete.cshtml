@model PowerUp.Models.ScheduleSlot

@{
    ViewData["Title"] = "Zaman Dilimini Sil";
    string[] days = { "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar" };
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Zaman Dilimini Sil</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Uyarı!</strong> <span class="badge bg-danger">@days[Model.DayOfWeek] @Model.StartTime.ToString("HH:mm")-@Model.EndTime.ToString("HH:mm")</span> zaman dilimini silmek istiyor musunuz?
                    </div>
                    <p class="text-muted">Bu işlem geri alınamaz. Bu zaman diliminde yapılmış rezervasyonlar da silinecektir.</p>
                    <form method="post" asp-action="Delete">
                        <input type="hidden" name="id" value="@Model.Id">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">Evet, Sil</button>
                            <a class="btn btn-secondary" asp-action="MySchedule">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
