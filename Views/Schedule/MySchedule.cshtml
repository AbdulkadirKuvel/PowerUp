@using PowerUp.Models

@model List<ScheduleSlot>

@{
    ViewData[index: "Title"] = "Haftalık Programım";
    string[] days = { "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar" };

    // Group slots by day
    List<ScheduleSlot>[]? slotsByDay = new List<ScheduleSlot>[7];
    for (int i = 0; i < 7; i++) slotsByDay[i] = new List<ScheduleSlot>();

    foreach (ScheduleSlot slot in Model)
    {
        slotsByDay[slot.DayOfWeek].Add(slot);
    }

    // Find the hour range
    int startHour = Model.Any() ? Model.Min(s => s.Hour) : 6;
    int endHour = Model.Any() ? Model.Max(s => s.Hour) : 22;

    // Ensure reasonable bounds
    startHour = Math.Max(0, startHour - 1);
    endHour = Math.Min(23, endHour + 1);

    @* dynamic? acceptedAppointments = ViewBag.acceptedAppointments;
    dynamic? waitingAppointments = ViewBag.waitingAppointments; *@

    dynamic? trainerId = ViewBag.trainerId;

}

<div class="container-fluid mt-5 px-0">
    <div class="row mb-4 mx-3">
        <div class="col-md-8">
            <h2>Haftalık Programım</h2>
        </div>
        <div class="col-md-4 text-end">
            <a class="btn btn-success" asp-action="Create">+ Zaman Ekle</a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info mx-3">
            Henüz hiç zaman dilimi eklemediniz.
        </div>
    }
    else
    {


        <div class="schedule-container">
            <div class="schedule-grid">
                <!-- Header row with day names -->
                <div class="schedule-cell schedule-header-time">Saat</div>
                @for (int day = 0; day < 7; day++)
                {
                    <div class="schedule-cell schedule-header-day">@days[day]</div>
                }

                <!-- Time rows -->
                @for (int hour = startHour; hour < endHour; hour++)
                {
                    <div class="schedule-cell schedule-header-time">@hour:00</div>

                    @for (int day = 0; day < 7; day++)
                    {
                        <div class="schedule-cell">
                            @{
                                List<ScheduleSlot>? slotsForCell = slotsByDay[day]
                                .Where(s => s.Hour == hour)
                                .ToList();
                            }

                            @foreach (var slot in slotsForCell)
                            {
                                <div class="slot-block" title="@slot.Hour:00 - @(slot.Hour + 1):00 - @slot.Gym?.Name">
                                    <div class="slot-time">@slot.Gym?.Name</div>
                                    <div style="font-size: 10px; margin-top: 2px;">
                                        @if (slot.ScheduleSlotServices?.Count > 0)
                                        {
                                            <span>@string.Join(separator: ", ", slot.ScheduleSlotServices.Take(count: 2).Select(ss => ss.Service?.Name
                                                                            ?? ""))</span>
                                                }
                                    </div>
                                    <div class="slot-actions">
                                        <a class="btn btn-warning slot-action-btn" asp-action="Edit" asp-route-id="@slot.Id"
                                            title="Düzenle">✎</a>
                                        <a class="btn btn-danger slot-action-btn" asp-action="Delete" asp-route-id="@slot.Id"
                                            title="Sil">✕</a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>