@using PowerUp.Models

@model List<ScheduleSlot>

@{
    ViewData["Title"] = "Haftalık Programım";
    string[] days = { "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar" };
    
    // Group slots by day
    var slotsByDay = new List<ScheduleSlot>[7];
    for (int i = 0; i < 7; i++) slotsByDay[i] = new List<ScheduleSlot>();
    
    foreach (var slot in Model)
    {
        slotsByDay[slot.DayOfWeek].Add(slot);
    }
    
    // Find the hour range
    int startHour = Model.Any() ? Model.Min(s => s.Hour) : 6;
    int endHour = Model.Any() ? Model.Max(s => s.Hour) : 22;
    
    // Ensure reasonable bounds
    startHour = Math.Max(0, startHour - 1);
    endHour = Math.Min(23, endHour + 1);
}

<div class="container-fluid mt-5 px-0">
    <div class="row mb-4 mx-3">
        <div class="col-md-8">
            <h2>Haftalık Programım</h2>
        </div>
        <div class="col-md-4 text-end">
            <a class="btn btn-success" asp-action="Create">+ Zaman Ekle</a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info mx-3">
            Henüz hiç zaman dilimi eklemediniz.
        </div>
    }
    else
    {
        <style>
            .schedule-grid {
                display: grid;
                grid-template-columns: 80px repeat(7, 1fr);
                gap: 1px;
                background-color: #ddd;
                padding: 1px;
                border-radius: 4px;
                overflow-x: auto;
            }
            
            .schedule-cell {
                background-color: white;
                border: 1px solid #ddd;
                padding: 6px;
                min-height: 50px;
                position: relative;
                font-size: 12px;
                word-wrap: break-word;
                overflow: hidden;
            }
            
            .schedule-header-day {
                background-color: #0d6efd;
                color: white;
                font-weight: bold;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 12px 6px;
                min-height: 50px;
            }
            
            .schedule-header-time {
                background-color: #6c757d;
                color: white;
                font-weight: bold;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 6px;
                font-size: 11px;
                min-height: 50px;
            }
            
            .slot-block {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 6px;
                border-radius: 3px;
                margin-bottom: 2px;
                border-left: 4px solid #764ba2;
                cursor: pointer;
                transition: all 0.2s;
                font-size: 11px;
                line-height: 1.2;
                position: relative;
            }
            
            .slot-block:hover {
                background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
                transform: translateY(-2px);
                box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            }
            
            .slot-time {
                font-weight: bold;
                font-size: 11px;
            }
            
            .slot-actions {
                position: absolute;
                right: 2px;
                top: 2px;
                opacity: 0;
                transition: opacity 0.2s;
                display: flex;
                gap: 2px;
            }
            
            .slot-block:hover .slot-actions {
                opacity: 1;
            }
            
            .slot-action-btn {
                padding: 2px 4px;
                font-size: 10px;
                border-radius: 2px;
            }
            
            .schedule-container {
                overflow-x: auto;
                margin: 0 12px;
            }
        </style>
        
        <div class="schedule-container">
            <div class="schedule-grid">
                <!-- Header row with day names -->
                <div class="schedule-cell schedule-header-time">Saat</div>
                @for (int day = 0; day < 7; day++)
                {
                    <div class="schedule-cell schedule-header-day">@days[day]</div>
                }
                
                <!-- Time rows -->
                @for (int hour = startHour; hour < endHour; hour++)
                {
                    <div class="schedule-cell schedule-header-time">@hour:00</div>
                    
                    @for (int day = 0; day < 7; day++)
                    {
                        <div class="schedule-cell">
                            @{
                                var slotsForCell = slotsByDay[day]
                                    .Where(s => s.Hour == hour)
                                    .ToList();
                            }
                            
                            @foreach (var slot in slotsForCell)
                            {
                                <div class="slot-block" title="@slot.Hour:00 - @(slot.Hour + 1):00 - @slot.Gym?.Name">
                                    <div class="slot-time">@slot.Gym?.Name</div>
                                    <div style="font-size: 10px; margin-top: 2px;">
                                        @if (slot.ScheduleSlotServices?.Count > 0)
                                        {
                                            <span>@string.Join(", ", slot.ScheduleSlotServices.Take(2).Select(ss => ss.Service?.Name ?? ""))</span>
                                        }
                                    </div>
                                    <div class="slot-actions">
                                        <a class="btn btn-warning slot-action-btn" asp-action="Edit" asp-route-id="@slot.Id" title="Düzenle">✎</a>
                                        <a class="btn btn-danger slot-action-btn" asp-action="Delete" asp-route-id="@slot.Id" title="Sil" onclick="return confirm('Emin misiniz?')">✕</a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>
