@using PowerUp.Models
@using PowerUp.Utility

@model Trainer

@{
    ViewData["Title"] = "Sundığum Hizmetler";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Sundığum Hizmetler</h2>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                + Hizmet Ekle
            </button>
        </div>
    </div>

    @if (Model.TrainerServices != null && Model.TrainerServices.Count > 0)
    {
        <div class="row">
            @foreach (var service in Model.TrainerServices)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title mb-0">@service.Service?.Name</h5>
                            </div>
                            <a class="btn btn-sm btn-danger" asp-action="RemoveService" asp-route-serviceId="@service.ServiceId">
                                Kaldır
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Henüz hiçbir hizmet eklememediniz.
        </div>
    }

    <div class="mt-4">
        <a class="btn btn-secondary" asp-action="Index">Geri Dön</a>
    </div>
</div>

<!-- Modal for Adding Service -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addServiceModalLabel">Hizmet Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addServiceForm" method="post" asp-action="AddService">
                <div class="modal-body">
                    <div class="mb-3" id="serviceList">
                        <!-- Services will be loaded here dynamically -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load available services when modal opens
        const addServiceModal = document.getElementById('addServiceModal');
        addServiceModal.addEventListener('show.bs.modal', async () => {
            try {
                const response = await fetch('/Service/GetAvailableServices?trainerId=@Model.Id');
                const services = await response.json();
                const serviceList = document.getElementById('serviceList');
                
                if (services.length === 0) {
                    serviceList.innerHTML = '<p class="text-muted">Tüm hizmetleri eklemişsiniz veya hiçbir hizmet yoktur.</p>';
                    return;
                }
                
                serviceList.innerHTML = services.map(service => `
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="serviceId" value="${service.id}" id="service_${service.id}">
                        <label class="form-check-label" for="service_${service.id}">
                            ${service.name}
                        </label>
                    </div>
                `).join('');
            } catch (error) {
                document.getElementById('serviceList').innerHTML = '<p class="text-danger">Hizmetler yüklenemeddi.</p>';
            }
        });
    </script>
}
