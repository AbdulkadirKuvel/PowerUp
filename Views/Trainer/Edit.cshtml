@using PowerUp.Models
@model Trainer

@{
    ViewData[index: "Title"] = "Antrenörü Düzenle";
    List<Gym>? gyms = ViewBag.Gyms as List<Gym> ?? new List<Gym>();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0" style="background-color: #1a1a1a; color: white;">
                <div class="card-header bg-warning text-dark fw-bold">
                    <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i>Antrenörü Düzenle</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Edit">
                        <input type="hidden" name="id" value="@Model.Id">
                        
                        <div class="mb-3">
                            <label for="name" class="form-label text-muted">İsim Soyisim</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-user"></i></span>
                                <input type="text" class="form-control bg-dark text-white border-secondary" id="name" name="name" value="@Model.Name" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label text-muted">Telefon Numarası</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-phone"></i></span>
                                <input type="tel" class="form-control bg-dark text-white border-secondary" id="phoneNumber" name="phoneNumber" value="@Model.PhoneNumber" required>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="gymId" class="form-label text-muted">Bağlı Olduğu Spor Salonu</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-building"></i></span>
                                <select class="form-select bg-dark text-white border-secondary" id="gymId" name="gymId" required>
                                    <option value="" class="text-muted">-- Spor Salonu Seçiniz --</option>
                                    @foreach (Gym gym in gyms)
                                    {
                                        if (gym.Id == Model.GymId)
                                        {
                                            <option value="@gym.Id" selected>@gym.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@gym.Id">@gym.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a class="btn btn-outline-secondary px-4" asp-action="Index">İptal</a>
                            <button type="submit" class="btn btn-warning px-4 fw-bold">Değişiklikleri Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>