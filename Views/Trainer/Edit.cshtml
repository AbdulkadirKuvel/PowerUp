@using PowerUp.Models

@model Trainer

@{
    ViewData["Title"] = "Antrenörü Düzenle";
    var gyms = ViewBag.Gyms as List<Gym> ?? new List<Gym>();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Antrenörü Düzenle</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <input type="hidden" name="id" value="@Model.Id">
                        <div class="mb-3">
                            <label for="name" class="form-label">İsim</label>
                            <input type="text" class="form-control" id="name" name="name" value="@Model.Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Telefon Numarası</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" value="@Model.PhoneNumber" required>
                        </div>
                        <div class="mb-3">
                            <label for="gymId" class="form-label">Spor Salonu Seçin</label>
                            <select class="form-control" id="gymId" name="gymId" required>
                                <option value="">-- Spor Salonu Seçiniz --</option>
                                @foreach (var gym in gyms)
                                {
                                    if (gym.Id == Model.GymId)
                                    {
                                        <option value="@gym.Id" selected>@gym.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@gym.Id">@gym.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                            <a class="btn btn-secondary" asp-action="Index">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
