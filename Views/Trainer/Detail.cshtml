@model PowerUp.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Detayları";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <p class="card-text">
                        <strong>Telefon Numarası:</strong> @Model.PhoneNumber
                    </p>

                    <h4 class="mt-4">Hizmetler</h4>
                    @if (Model.TrainerServices != null && Model.TrainerServices.Any())
                    {
                        <ul class="list-group">
                            @foreach (var service in Model.TrainerServices)
                            {
                                <li class="list-group-item">
                                    @(service.Service?.Name ?? "Hizmet")
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Bu antrenör henüz herhangi bir hizmet eklememiştir.</p>
                    }

                    <div class="mt-4">
                        <a class="btn btn-primary" asp-action="TakeAppointment" asp-route-id="@Model.Id">Randevu Al</a>
                        <a class="btn btn-secondary" asp-action="Index">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
