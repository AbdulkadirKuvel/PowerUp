@using PowerUp.Models

@model Service

@{
    ViewData["Title"] = "Hizmet Detayları";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">@Model.Name</h2>
                </div>
                <div class="card-body">
                    <h4 class="mt-4">Bu Hizmeti Sunan Eğitmenciler</h4>
                    @if (Model.TrainerServices != null && Model.TrainerServices.Any())
                    {
                        <div class="list-group mt-3">
                            @foreach (var trainerService in Model.TrainerServices)
                            {
                                var trainer = trainerService.Trainer;
                                <a href="@Url.Action("Detail", "Trainer", new { id = trainer?.Id })" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@(trainer?.Name ?? "Bilinmeyen Eğitmenci")</h5>
                                        <small class="text-muted">@(trainer?.PhoneNumber ?? "N/A")</small>
                                    </div>
                                    @if (trainer?.Gym != null)
                                    {
                                        <p class="mb-1">
                                            <small>Spor Salonu: @trainer.Gym.Name</small>
                                        </p>
                                    }
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mt-3">
                            Bu hizmeti sunan eğitmenci bulunmamaktadır.
                        </div>
                    }

                    <div class="mt-4">
                        <a class="btn btn-secondary" asp-action="Index">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
