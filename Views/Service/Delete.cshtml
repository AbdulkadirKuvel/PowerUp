@model PowerUp.Models.Service

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Hizmeti Sil</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Uyarı!</strong> <span class="badge bg-danger">@Model.Name</span> hizmetini silmek istiyor musunuz?
                    </div>
                    <p class="text-muted">Bu işlem geri alınamaz.</p>
                    <form method="post" asp-action="Delete">
                        <input type="hidden" name="id" value="@Model.Id">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">Evet, Sil</button>
                            <a class="btn btn-secondary" asp-action="Index">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
