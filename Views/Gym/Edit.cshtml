@model PowerUp.Models.Gym

@{
    ViewData["Title"] = "Spor Salonunu Düzenle";
    // ViewBag'den gelen listeyi güvenli bir şekilde alıyoruz
    var availableFeatures = ViewBag.AvailableFeatures as List<PowerUp.Models.GymFeature> ?? new List<PowerUp.Models.GymFeature>();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 content-card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Spor Salonunu Düzenle</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label text-muted">İsim</label>
                                <input type="text" class="form-control bg-dark text-white border-secondary" id="name" asp-for="Name" required>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="address" class="form-label text-muted">Adres</label>
                                <input type="text" class="form-control bg-dark text-white border-secondary" id="address" asp-for="Address" required>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="monthlyPrice" class="form-label text-muted">Aylık Fiyat (₺)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary border-secondary text-white">₺</span>
                                    <input type="number" class="form-control bg-dark text-white border-secondary" id="monthlyPrice" asp-for="MonthlyPrice" required>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="annuallyPrice" class="form-label text-muted">Yıllık Fiyat (₺)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary border-secondary text-white">₺</span>
                                    <input type="number" class="form-control bg-dark text-white border-secondary" id="annuallyPrice" asp-for="AnnuallyPrice" required>
                                </div>
                            </div>
                        </div>

                        <hr class="border-secondary my-4">

                        <h6 class="text-warning mb-3">Özellikler & İmkanlar</h6>

                        <div class="mb-3">
                            <label class="form-label text-muted mb-2">Mevcut Özellikleri Güncelle:</label>
                            <div class="row g-3">
                                @foreach (var feature in availableFeatures)
                                {
                                    // Bu özellik şu anki Gym'de var mı kontrolü
                                    bool isChecked = Model.Features.Any(f => f.Id == feature.Id);

                                    <div class="col-md-4 col-sm-6">
                                        <div class="form-check p-2 border border-secondary rounded custom-checkbox-hover @(isChecked ? "bg-secondary bg-opacity-25" : "")">
                                            <input class="form-check-input ms-1" type="checkbox" 
                                                   name="selectedFeatureIds" 
                                                   value="@feature.Id" 
                                                   id="feature_@feature.Id"
                                                   @(isChecked ? "checked" : "")>
                                            <label class="form-check-label ms-2 text-light" for="feature_@feature.Id">
                                                <i class="@feature.IconClass me-1 text-warning"></i> @feature.Name
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="customFeatures" class="form-label text-muted">Yeni Özellik Ekle (Virgülle ayırarak)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-plus"></i></span>
                                <input type="text" class="form-control bg-dark text-white border-secondary" id="customFeatures" name="customFeatures" placeholder="Örn: Masaj, Pilates">
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="List" class="btn btn-outline-secondary px-4">İptal</a>
                            <button type="submit" class="btn btn-warning px-4">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

