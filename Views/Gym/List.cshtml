@model List<PowerUp.Models.Gym>

@{
    ViewData[index: "Title"] = "Spor Salonları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-5">

    <div class="row align-items-center page-header" data-aos="fade-down">
        <div class="col-md-8">
            <h1 class="section-title">@ViewData["Title"]</h1>
            <p class="text-muted">Size en yakın şubemizi keşfedin.</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a class="btn-add-new" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Salon Ekle
                </a>
            </div>
        }
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info bg-dark text-white border-info" data-aos="fade-up">
            <i class="fas fa-info-circle me-2"></i> Henüz spor salonu bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var gym in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4" data-aos="fade-up" data-aos-duration="800">
                    <div class="gym-card">
                        <div class="gym-img-wrapper">
                            <img src="https://images.unsplash.com/photo-1593079831268-3381b0db4a77?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                                alt="Gym">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@gym.Name</h5>

                            <div class="gym-info">
                                <i class="fas fa-map-marker-alt"></i>
                                <span style="margin-left: .3vw;"> @gym.Address</span>
                            </div>

                            <div class="price-tags mt-auto">
                                <div class="price-badge">
                                    Ay: <span class="price-highlight">₺@gym.MonthlyPrice</span>
                                </div>
                                <div class="price-badge">
                                    Yıl: <span class="price-highlight">₺@gym.AnnuallyPrice</span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer-custom">
                            <a class="btn-details" asp-action="Details" asp-route-id="@gym.Id">
                                İncele <i class="fas fa-arrow-right ms-1"></i>
                            </a>

                            @if (User.IsInRole(role: "Admin"))
                            {
                                <div>
                                    <a class="btn-action" asp-action="Edit" asp-route-id="@gym.Id" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn-action delete" onclick="deleteGymProcess(@gym.Id)" title="Sil">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
        // DialogBox zaten layout'ta veya yukarıda tanımlanmış olmalı
        // window.DialogBox = new DialogBox(); (dialogBox.js içinde var)

        async function deleteGymProcess(gymId) {
            try {
                // 1. Backend'e sor: Bu salonun durumu ne?
                const response = await fetch(`/Gym/CheckDeleteStatus/${gymId}`);
                const data = await response.json();

                if (!data.success) {
                    window.DialogBox.show({
                        type: 'error',
                        title: 'Hata',
                        message: data.message || 'Bir hata oluştu.'
                    });
                    return;
                }

                // SENARYO 1: Antrenör Varsa
                if (data.hasTrainers) {
                    window.DialogBox.show({
                        type: 'error', // veya 'warning'
                        title: 'Silme İşlemi Engellendi',
                        message: `"${data.gymName}" isimli salonda kayıtlı ${data.trainerCount} adet antrenör bulunmaktadır. Salonu silmek için önce antrenörleri silmelisiniz veya başka salona taşımalısınız.`,
                        buttons: [
                            {
                                text: 'İptal',
                                action: () => window.DialogBox.close(),
                                isPrimary: false
                            },
                            {
                                text: 'Antrenörleri Gör',
                                isPrimary: true,
                                action: () => {
                                    // Antrenör listesine yönlendir
                                    // Eğer filtreleme yapabiliyorsan ?gymId=... ekleyebilirsin
                                    window.location.href = '/Trainer';
                                }
                            }
                        ]
                    });
                }
                // SENARYO 2: Antrenör Yoksa (Onaylı Silme)
                else {
                    window.DialogBox.show({
                        type: 'warning',
                        title: 'Salonu Sil',
                        message: `"${data.gymName}" isimli salonu kalıcı olarak silmek üzeresiniz. Bu işlem geri alınamaz.`,
                        checkbox: {
                            label: 'Bu işlemi onaylıyorum ve silinmesini kabul ediyorum.',
                            checked: false
                        },
                        buttons: [
                            {
                                text: 'Vazgeç',
                                action: () => window.DialogBox.close(),
                                isPrimary: false
                            },
                            {
                                text: 'Sil',
                                isPrimary: true,
                                action: () => performDelete(gymId)
                            }
                        ]
                    });
                }

            } catch (error) {
                console.error("Hata:", error);
                window.DialogBox.show({
                    type: 'error',
                    title: 'Bağlantı Hatası',
                    message: 'Sunucu ile iletişim kurulurken bir hata oluştu.'
                });
            }
        }

        // Fiziksel silme işlemini yapan fonksiyon
        function performDelete(id) {
            // MVC Controller'daki [HttpPost] Delete metodunu tetiklemek için sanal bir form oluşturuyoruz.
            // Fetch kullanırsak redirect işlemini manuel yönetmek gerekir, form post daha temizdir.

            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Gym/Delete/' + id;

            // CSRF Token (Anti-Forgery) varsa eklenmeli (Genelde gereklidir)
            // Layout'unda __RequestVerificationToken input'u varsa onu kopyala:
            var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            if (tokenInput) {
                var hiddenField = document.createElement('input');
                hiddenField.type = 'hidden';
                hiddenField.name = '__RequestVerificationToken';
                hiddenField.value = tokenInput.value;
                form.appendChild(hiddenField);
            }

            document.body.appendChild(form);
            form.submit();
        }
    </script>
}