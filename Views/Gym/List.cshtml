@model List<PowerUp.Models.Gym>

@{
    ViewData["Title"] = "Spor Salonları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-5">
    
    <div class="row align-items-center page-header" data-aos="fade-down">
        <div class="col-md-8">
            <h1 class="section-title">@ViewData["Title"]</h1>
            <p class="text-muted">Size en yakın şubemizi keşfedin.</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a class="btn-add-new" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Salon Ekle
                </a>
            </div>
        }
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info bg-dark text-white border-info" data-aos="fade-up">
            <i class="fas fa-info-circle me-2"></i> Henüz spor salonu bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var gym in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4" data-aos="fade-up" data-aos-duration="800">
                    <div class="gym-card">
                        <div class="gym-img-wrapper">
                            <img src="https://images.unsplash.com/photo-1593079831268-3381b0db4a77?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="Gym">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@gym.Name</h5>
                            
                            <div class="gym-info">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@gym.Address</span>
                            </div>

                            <div class="price-tags mt-auto">
                                <div class="price-badge">
                                    Ay: <span class="price-highlight">₺@gym.MonthlyPrice</span>
                                </div>
                                <div class="price-badge">
                                    Yıl: <span class="price-highlight">₺@gym.AnnuallyPrice</span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer-custom">
                            <a class="btn-details" asp-action="Details" asp-route-id="@gym.Id">
                                İncele <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <div>
                                    <a class="btn-action" asp-action="Edit" asp-route-id="@gym.Id" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn-action delete" onclick="showConfirm('@Url.Action("Delete","Gym", new { id = gym.Id })', 'Silmek istediğinizden emin misiniz?')" title="Sil">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();

        function showConfirm(url, message) {
            window.DialogBox.show({
                type: 'warning',
                title: 'Onay',
                message: message,
                buttons: [
                    { text: 'İptal', action: () => window.DialogBox.close(), isPrimary: false },
                    { text: 'Evet', action: () => { window.location.href = url; }, isPrimary: true }
                ]
            });
        }
    </script>
}