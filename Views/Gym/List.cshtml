@model List<PowerUp.Models.Gym>

@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-auto">
                <a class="btn btn-primary" asp-action="Create">+ Spor Salonu Ekle</a>
            </div>
        }
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">Henüz spor salonu bulunmamaktadır.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>İsim</th>
                        <th>Adres</th>
                        <th>Aylık Fiyat</th>
                        <th>Yıllık Fiyat</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var gym in Model)
                    {
                        <tr>
                            <td>@gym.Name</td>
                            <td>@gym.Address</td>
                            <td>₺@gym.MonthlyPrice</td>
                            <td>₺@gym.AnnuallyPrice</td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@gym.Id">Detaylar</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@gym.Id">Düzenle</a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@gym.Id" onclick="return confirm('Silmek istediğinizden emin misiniz?')">Sil</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
