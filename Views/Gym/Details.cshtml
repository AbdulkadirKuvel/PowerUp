<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-4 mb-5">

    <div data-aos="fade-right">
        <a asp-action="List" class="btn-back-link">
            <i class="fas fa-arrow-left me-2"></i> Salonlara Dön
        </a>
    </div>

    <div class="gym-hero" data-aos="zoom-in">
        <img src="https://images.unsplash.com/photo-1570829460005-c840387bb1ca?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80"
            alt="Gym Hero">
        <div class="gym-hero-content">
            <h1 class="gym-title">@Model.Name</h1>
            <div class="gym-address">
                <i class="fas fa-map-marker-alt"></i> @Model.Address
            </div>
        </div>
    </div>
</div>

<div class="trainers-section mb-5" data-aos="fade-up" data-aos-delay="100">
    <div class="d-flex align-items-center mb-4">
        <h3 class="text-white fw-bold mb-0 me-3">
            <i class="fas fa-users text-danger me-2"></i>Eğitmen Kadromuz
        </h3>
        <div class="flex-grow-1" style="height: 2px; background: linear-gradient(90deg, #dc3545 0%, transparent 100%); opacity: 0.5;"></div>
    </div>

    @if (Model.Trainers != null && Model.Trainers.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var trainer in Model.Trainers)
            {
                <div class="col">
                    <a asp-controller="Trainer" asp-action="Details" asp-route-id="@trainer.Id" class="text-decoration-none card-link-hover">
                        <div class="card h-100 trainer-card border-0" 
                             style="background-color: #1a1a1a; transition: all 0.3s ease; position: relative; overflow: hidden;">
                            
                            <div class="card-hover-line"></div>

                            <div class="card-body text-center py-4 d-flex flex-column align-items-center justify-content-center">
                                
                                <div class="mb-3 position-relative">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 80px; height: 80px; background-color: #000; border: 1px solid #333; box-shadow: 0 0 15px rgba(220, 53, 69, 0.15);">
                                        <i class="fas fa-user-ninja fa-2x text-danger"></i>
                                    </div>
                                </div>

                                <h5 class="card-title text-white fw-bold mb-1 mt-2">
                                    @trainer.Name
                                </h5>
                                
                                <p class="text-muted small mb-0">Profesyonel Eğitmen</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert custom-dark-alert d-flex align-items-center border-0" role="alert" 
             style="background-color: #1a1a1a; color: #aaa; border-left: 4px solid #dc3545 !important;">
            <div class="bg-dark rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                <i class="fas fa-info text-danger"></i>
            </div>
            <div>
                Bu salonda henüz kayıtlı antrenör bulunmamaktadır.
            </div>
        </div>
    }
</div>

<style>
    /* Kart Hover Efektleri */
    .trainer-card {
        transform: translateY(0);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .card-link-hover:hover .trainer-card {
        transform: translateY(-7px);
        background-color: #212121 !important; /* Biraz daha açık ton */
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
    }

    /* Kartın üstündeki kırmızı çizgi animasyonu */
    .card-hover-line {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: #dc3545;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }

    .card-link-hover:hover .card-hover-line {
        transform: scaleX(1);
    }

    /* İkon ve Buton Etkileşimi */
    .card-link-hover:hover .fa-user-ninja {
        animation: pulse 1s infinite;
    }

    .card-link-hover:hover .btn-outline-danger {
        background-color: #dc3545;
        color: white;
    }

    @@keyframes pulse {
        0% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.1); opacity: 0.8; }
        100% { transform: scale(1); opacity: 1; }
    }
</style>
    <div class="row">
        <div class="col-md-7 mb-4" data-aos="fade-up">
            <div class="content-card h-100">
                <h3 class="text-white mb-4">Salon Hakkında</h3>
                <p class="text-muted">
                    PowerUp ailesinin bir parçası olan <strong>@Model.Name</strong>, son teknoloji ekipmanlar ve uzman
                    kadrosuyla hizmetinizdedir.
                    Hedeflerinize ulaşmak için ihtiyacınız olan her şey burada.
                </p>
                <div class="mt-4">
                    <h5 class="text-white mb-3"><i class="fas fa-check-circle me-2 text-danger"></i>Öne Çıkanlar</h5>
                    <ul class="list-unstyled text-muted">
                        @if (Model.Features != null && Model.Features.Any())
                        {
                            @foreach (GymFeature feature in Model.Features)
                            {
                                <li class="mb-2 d-flex align-items-center">
                                    <i
                                        class="@(string.IsNullOrEmpty(feature.IconClass) ? "fas fa-check-circle" : feature.IconClass) me-2 text-danger"></i>
                                    @feature.Name
                                </li>
                            }
                        }
                        else
                        {
                            <li class="mb-2 text-muted fst-italic">
                                <i class="fas fa-info-circle me-2"></i>Bu salon için henüz özellik belirtilmemiş.
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-5" data-aos="fade-up" data-aos-delay="200">
            <div class="content-card">
                <h3 class="text-white mb-4 text-center">Üyelik Seçenekleri</h3>

                <div class="pricing-card">
                    <div class="pricing-period">Aylık Üyelik</div>
                    <div class="pricing-price">
                        ₺@Model.MonthlyPrice <small>/ay</small>
                    </div>
                    <p class="text-muted small mb-0">Esnek ödeme planı.</p>
                </div>

                <div class="pricing-card pricing-highlight">
                    <div class="pricing-period pricing-highlight">Yıllık Üyelik</div>
                    <div class="pricing-price">
                        ₺@Model.AnnuallyPrice <small>/yıl</small>
                    </div>
                    <p class="text-muted small mb-0">En avantajlı seçenek.</p>
                </div>

                <a asp-action="Subscribe" asp-route-id="@Model.Id" class="btn-subscribe">
                    <i class="fas fa-bolt me-2"></i> Hemen Abone Ol
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
}