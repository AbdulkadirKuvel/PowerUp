@model PowerUp.Models.Gym

@{
    ViewData["Title"] = "Spor Salonu Detayları";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <hr>
                    <p><strong>Adres:</strong> @Model.Address</p>
                    <p><strong>Aylık Fiyat:</strong> ₺@Model.MonthlyPrice</p>
                    <p><strong>Yıllık Fiyat:</strong> ₺@Model.AnnuallyPrice</p>

                    <div class="mt-4">
                        <a class="btn btn-success" asp-action="Subscribe" asp-route-id="@Model.Id">Abone Ol</a>
                        <a class="btn btn-secondary" asp-action="List">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
