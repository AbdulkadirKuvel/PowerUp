@{
    ViewData["Title"] = "Chatbot";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">PowerUp Chatbot</h5>
                </div>
                <div class="card-body" style="height: 500px; overflow-y: auto; background-color: #f8f9fa;">
                    <div class="mb-3 p-3 bg-white rounded border">
                        <p class="mb-0"><strong>Bot:</strong> Merhaba! Size nasıl yardımcı olabilirim?</p>
                    </div>
                </div>
                <div class="card-footer">
                    <form method="post" asp-action="Index" class="input-group">
                        <input type="text" class="form-control" id="message" name="message" placeholder="Mesajınızı girin..." autocomplete="off">
                        <button class="btn btn-primary" type="submit">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-body {
        word-wrap: break-word;
    }
    .card-body p {
        margin-bottom: 0;
    }
</style>
