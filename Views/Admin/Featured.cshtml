    }

    <form method="post" asp-action="Featured">
        <div class="row">
            <!-- Trainers Column -->
            <div class="col-md-6">
                <div class="card card-dark">
                    <div class="card-header" style="background: linear-gradient(135deg, #e31c25 0%, #b01018 100%);">
                        <h5 class="mb-0"><i class="fas fa-person"></i> Antren√∂rler</h5>
                    </div>
                    <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                        @foreach (var t in (IEnumerable<dynamic>)ViewBag.Trainers)
                        {
                            <div class="checkbox-item">
                                <div class="form-check">
                                    <input class="form-check-input" name="selectedTrainerIds" value="@t.Id" type="checkbox" id="trainer_@t.Id">
                                    <label class="form-check-label w-100" for="trainer_@t.Id">
                                        <strong style="color: #fff;">@t.Name</strong>
                                    </label>
                                </div>
                                <div class="stat-label ms-3">
                                    <i class="fas fa-building"></i> @t.GymName
                                </div>
                                <div class="ms-3 mt-2">
                                    <span class="stat-badge"><i class="fas fa-handshake"></i> Kabul: @t.AcceptedCount</span>
                                    <span class="stat-badge"><i class="fas fa-hourglass"></i> Beklemede: @t.AwaitingCount</span>
                                </div>
                                @if (t.RatedCount > 0)
                                {
