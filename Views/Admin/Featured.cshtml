                                {
                                    <div class="ms-3 mt-2 text-muted" style="font-size: 0.85rem;">
                                        <i class="fas fa-star-half-alt"></i> Hen√ºz puan yok
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Gyms Column -->
            <div class="col-md-6">
                <div class="card card-dark">
                    <div class="card-header" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                        <h5 class="mb-0"><i class="fas fa-building"></i> Spor Salonlarƒ±</h5>
                    </div>
                    <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                        @foreach (var g in (IEnumerable<dynamic>)ViewBag.Gyms)
                        {
                            <div class="checkbox-item">
                                <div class="form-check">
                                    <input class="form-check-input" name="selectedGymIds" value="@g.Id" type="checkbox" id="gym_@g.Id">
                                    <label class="form-check-label w-100" for="gym_@g.Id">
                                        <strong style="color: #fff;">@g.Name</strong>
                                    </label>
                                </div>
                                <div class="ms-3 mt-2">
                                    <span class="stat-badge"><i class="fas fa-handshake"></i> Kabul: @g.AcceptedCount</span>
                                    <span class="stat-badge"><i class="fas fa-hourglass"></i> Beklemede: @g.AwaitingCount</span>
                                </div>
                                @if (g.RatedCount > 0)
                                {
                                    <div class="ms-3 mt-2">
                                        <div class="stat-label">Salon Puanƒ± (‚≠ê @g.AvgGymRating.ToString("F1")/5) - @g.RatedCount dersleri</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="ms-3 mt-2 text-muted" style="font-size: 0.85rem;">
                                        <i class="fas fa-star-half-alt"></i> Hen√ºz puan yok
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button class="btn btn-primary btn-lg" type="submit">
                <i class="fas fa-save"></i> Kaydet ve G√ºncelle
            </button>
        </div>
    </form>

    <hr class="my-5" />

    <h5><i class="fas fa-check-circle"></i> Mevcut √ñne √áƒ±kanlar (Ana Sayfada G√∂sterilecek)</h5>
    <div class="row mt-4">
        @{
            var featured = (IEnumerable<PowerUp.Models.FeaturedItem>)ViewBag.Featured;
            if (featured.Count() == 0)
            {
                <div class="col-12">
                    <div class="alert alert-info"><i class="fas fa-info-circle"></i> Hen√ºz √∂ne √ßƒ±kan yok. L√ºtfen se√ßin ve kaydedin.</div>
                </div>
