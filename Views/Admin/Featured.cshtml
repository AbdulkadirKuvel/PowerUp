}

<style>
    .stats-card {
        background: #1a1a1a;
        border: 1px solid #333;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 8px;
    }
    .stat-badge {
        display: inline-block;
        padding: 4px 8px;
        margin: 2px;
        border-radius: 4px;
        font-size: 0.85rem;
        background: #e31c25;
        color: white;
    }
    .stat-label {
        color: #aaa;
        font-size: 0.9rem;
        margin-bottom: 4px;
    }
    .stars {
        color: #ffd166;
        font-size: 1rem;
    }
    .checkbox-item {
        background: #1a1a1a;
        border: 1px solid #333;
        padding: 12px;
        margin-bottom: 8px;
