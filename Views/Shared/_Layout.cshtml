<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PowerUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PowerUp.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="@Url.Action(action: "Index", controller: "Home")" class="sidebar-brand">
                <i class="fas fa-dumbbell"></i>
                <span>PowerUp</span>
            </a>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>

        <nav>
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a href="@Url.Action(action: "Index", controller: "Home")" class="sidebar-nav-link">
                        <i class="fas fa-home"></i>
                        <span>Anasayfa</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="@Url.Action(action: "Index", controller: "Trainer")" class="sidebar-nav-link">
                        <i class="fas fa-person"></i>
                        <span>Antrenörler</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="@Url.Action(action: "List", controller: "Gym")" class="sidebar-nav-link">
                        <i class="fas fa-building"></i>
                        <span>Spor Salonları</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="@Url.Action(action: "Index", controller: "Service")" class="sidebar-nav-link">
                        <i class="fas fa-hands-helping"></i>
                        <span>Hizmetler</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a href="@Url.Action(action: "Index", controller: "ChatBot")" class="sidebar-nav-link">
                        <i class="fas fa-comments"></i>
                        <span>Chatbot</span>
                    </a>
                </li>
            </ul>
        </nav>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="sidebar-divider"></div>
            <div class="sidebar-user-section">
                <div class="sidebar-user-info">
                    <strong>@User.Identity?.Name</strong>
                    <small>Hoşgeldiniz</small>
                </div>
                <div class="sidebar-buttons">
                    <a href="@Url.Action(action: "Profile", controller: "Account")" class="btn btn-sm" title="Profil">
                        <i class="fas fa-user"></i>
                        <span>Profil</span>
                    </a>
                </div>
                <div class="sidebar-buttons">
                    <a href="@Url.Action(action: "MyAppointments", controller: "Account")" class="btn btn-sm"
                        title="Randevularım">
                        <i class="fas fa-calendar"></i>
                        <span>Randevular</span>
                    </a>
                </div>
                @if (User.IsInRole(role: "Admin"))
                {
                    <div class="sidebar-buttons">
                        <a href="@Url.Action(action: "Featured", controller: "Admin")" class="btn btn-sm" title="Öne Çıkanlar">
                            <i class="fas fa-star"></i>
                            <span>Öne Çıkanlar</span>
                        </a>
                    </div>
                    <div class="sidebar-buttons">
                        <a href="@Url.Action(action: "AllAppointments", controller: "Admin")" class="btn btn-sm"
                            title="Tüm Randevular">
                            <i class="fas fa-tasks"></i>
                            <span>Yönetim</span>
                        </a>
                    </div>
                }
                <div class="sidebar-buttons">
                    <a href="@Url.Action(action: "Lcontroller: ogout", "Account")" class="btn btn-sm" title="Çıkış">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Çıkış</span>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="sidebar-divider"></div>
            <div class="sidebar-user-section">
                <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-block" style="width: 100%; display: block;">
                    <i class="fas fa-sign-in-alt"></i>
                    <span>Giriş Yap</span>
                </a>
            </div>
        }
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <header class="top-bar">
            <div class="top-bar-left">
                <button class="top-bar-toggle" id="topbarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            <div class="top-bar-right">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div>
                        @await Html.PartialAsync(partialViewName: "_NotificationModal")
                    </div>
                }
            </div>
        </header>

        <!-- Content -->
        <div class="content-wrapper">
            <main role="main">
                @RenderBody()
            </main>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dialogbox.js"></script>

    <script>
        // Sidebar Toggle
        const sidebar = document.getElementById('sidebar');
        const sidebarToggle = document.getElementById('sidebarToggle');
        const topbarToggle = document.getElementById('topbarToggle');
        const themeToggle = document.getElementById('themeToggle');

        // Desktop sidebar collapse
        sidebarToggle?.addEventListener('click', () => {
            if (window.innerWidth > 768) {
                sidebar.classList.toggle('collapsed');
                localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
            }
        });

        // Mobile sidebar toggle
        topbarToggle?.addEventListener('click', () => {
            if (window.innerWidth <= 768) {
                sidebar.classList.toggle('mobile-expanded');
            }
        });

        // Load saved preferences
        function loadPreferences() {
            // Load sidebar state
            if (localStorage.getItem('sidebarCollapsed') === 'true' && window.innerWidth > 768) {
                sidebar.classList.add('collapsed');
            }

            // Enforce dark theme only
            document.body.classList.add('dark-theme');
        }

        // Set active nav link
        function setActiveNavLink() {
            const currentPath = window.location.pathname;
            document.querySelectorAll('.sidebar-nav-link').forEach(link => {
                if (link.href && link.href.includes(currentPath)) {
                    link.classList.add('active');
                }
            });
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            loadPreferences();
            setActiveNavLink();
        });

        // Handle window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                sidebar.classList.remove('mobile-expanded');
            }
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync(name: "Scripts", required: false)
</body>

</html>